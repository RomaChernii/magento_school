<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Chleck_Blog::blog_core" title="Blog Core">
                    <resource id="Chleck_Blog::post" title="Blog Post" translate="title" sortOrder="10">
                        <resource id="Chleck_Blog::post_save" title="Save Post" translate="title" sortOrder="10" />
                        <resource id="Chleck_Blog::post_delete" title="Delete Post" translate="title" sortOrder="20" />
                    </resource>
                    <resource id="Chleck_Blog::comment" title="Blog Comment" translate="title" sortOrder="10">
                        <resource id="Chleck_Blog::comment_save" title="Save Comment" translate="title" sortOrder="10" />
                        <resource id="Chleck_Blog::comment_delete" title="Delete Comment" translate="title" sortOrder="20" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
