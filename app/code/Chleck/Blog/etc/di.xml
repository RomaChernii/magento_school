<?xml version="1.0"?>
<!--
 * Chleck Blog dependency injection
 * @category  Chleck
 * @package   Chleck\Blog
 * @author    Yuri Chleck <yurichlek@gmail.com>
 * @copyright 2019 Smile
 */
 -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Chleck\Blog\Api\Data\PostInterface" type="Chleck\Blog\Model\Post" />
    <preference for="Chleck\Blog\Api\Data\CommentInterface" type="Chleck\Blog\Model\Comment" />

    <preference for="Chleck\Blog\Api\Data\PostSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Chleck\Blog\Api\Data\CommentSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />

    <preference for="Chleck\Blog\Api\PostRepositoryInterface" type="Chleck\Blog\Model\PostRepository" />
    <preference for="Chleck\Blog\Api\CommentRepositoryInterface" type="Chleck\Blog\Model\CommentRepository" />

    <!--Post-->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="chleck_blog_post_listing_data_source" xsi:type="string">Chleck\Blog\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Chleck\Blog\Model\ResourceModel\Post\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">chleck_blog_post</argument>
            <argument name="eventPrefix" xsi:type="string">chleck_blog_post_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">post_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Chleck\Blog\Model\ResourceModel\Post</argument>
        </arguments>
    </type>

    <virtualType name="BlogGridFilterPool_ChleckPost" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\Model\Entity\RepositoryFactory">
        <arguments>
            <argument name="entities" xsi:type="array">
                <item name="Chleck\Blog\Api\Data\PostInterface" xsi:type="string">Chleck\Blog\Api\PostRepositoryInterface</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Chleck\Blog\Api\Data\PostInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">chleck_blog_post</item>
                    <item name="identifierField" xsi:type="string">id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Chleck\Blog\Api\Data\PostInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>

        <!--Comment-->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="chleck_blog_comment_listing_data_source" xsi:type="string">Chleck\Blog\Model\ResourceModel\Comment\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Chleck\Blog\Model\ResourceModel\Comment\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">chleck_blog_comment</argument>
            <argument name="eventPrefix" xsi:type="string">chleck_blog_comment_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">comment_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Chleck\Blog\Model\ResourceModel\Comment</argument>
        </arguments>
    </type>

    <virtualType name="BlogGridFilterPool_ChleckComment" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\Model\Entity\RepositoryFactory">
        <arguments>
            <argument name="entities" xsi:type="array">
                <item name="Chleck\Blog\Api\Data\CommentInterface" xsi:type="string">Chleck\Blog\Api\CommentRepositoryInterface</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Chleck\Comment\Api\Data\CommentInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">chleck_blog_comment</item>
                    <item name="identifierField" xsi:type="string">id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Chleck\Blog\Api\Data\CommentInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>
</config>
