<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>

        <tab id="chleck" translate="label" sortOrder="110">
            <label>Fourth Task</label>
        </tab>
        <section id="chleck_task" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Chleck Section</label>
            <tab>chleck</tab>
            <resource>Chleck_FourthModule::config_chleck</resource>
            <group id="my_first_group" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Is Enable</label>
                <attribute type="expanded">1</attribute>
                <field id="chleck_id" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>My yes/No field</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="chleck_id_input" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Input</label>
                    <comment>Please set string</comment>
                </field>
            </group>
        </section>
        <section id="payment">
            <group id="my_first_group" translate="label" type="text" sortOrder="25" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Chleck Payment Configuration</label>
                <field id="chleck_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>API Key</label>
                    <config_path>payment/my_first_group/api_key</config_path>
                </field>
            </group>
        </section>
    </system>

</config>
