        <referenceContainer name="content">
            <block class="Semysiuk\FirstModule\Block\Renderer\Wording" name="layout_view" template="Semysiuk_FirstModule::renderer/wording.phtml"></block>
            <block class="Magento\Framework\View\Element\Template" name="first_view_model" template="Semysiuk_FirstModule::renderer/price.phtml">
                <arguments>
                    <argument name="priceCurrency" xsi:type="object">Semysiuk\FirstModule\ViewModel\PriceCurrency</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
