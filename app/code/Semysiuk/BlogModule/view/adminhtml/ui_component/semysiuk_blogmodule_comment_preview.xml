<?xml version="1.0"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">semysiuk_blogmodule_comment_preview.semysiuk_blogmodule_comment_preview_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Comment Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
<!--        <buttons>-->
<!--            <button name="save" class="Semysiuk\BlogModule\Block\Adminhtml\Post\Edit\SaveButton"/>-->
<!--            <button name="delete" class="Semysiuk\BlogModule\Block\Adminhtml\Post\Edit\DeleteButton"/>-->
<!--            <button name="back" class="Semysiuk\BlogModule\Block\Adminhtml\Post\Edit\BackButton"/>-->
<!--        </buttons>-->
        <namespace>semysiuk_blogmodule_comment_preview</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>semysiuk_blogmodule_comment_preview.comment_preview_data_source</dep>
        </deps>
    </settings>
    <dataSource name="comment_preview_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
<!--        <settings>-->
<!--            <submitUrl path="semysiuk_blogmodule/post/save"/>-->
<!--        </settings>-->
        <dataProvider class="Semysiuk\BlogModule\Model\Comment\DataProvider" name="comment_preview_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="first_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">first_name</item>
                    <item name="sortOrder" xsi:type="string">10</item>
                    <item name="formElement" xsi:type="string">text</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
<!--                    <item name="dataScope" xsi:type="string">title</item>-->
                </item>
            </argument>
        </field>
    </fieldset>
</form>
