<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Myskovets_BlogModule::blog_core" title="Blog Core">
                    <resource id="Myskovets_BlogModule::post" title="Blog Post" translate="title" sortOrder="10">
                        <resource id="Myskovets_BlogModule::post_save" title="Save Post" translate="title" sortOrder="10" />
                        <resource id="Myskovets_BlogModule::post_delete" title="Delete Post" translate="title" sortOrder="20" />
                    </resource>
                    <resource id="Myskovets_BlogModule::comment" title="Blog Comment" translate="title" sortOrder="20">
                        <resource id="Myskovets_BlogModule::comment_set_state" title="Set State of a Comment" translate="title" sortOrder="10" />
                        <resource id="Myskovets_BlogModule::comment_delete" title="Delete Comment" translate="title" sortOrder="20"/>
                        <resource id="Myskovets_BlogModule::comment_save" title="Edit Comment" translate="title" sortOrder="30"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
