<?xml version="1.0"?>
<!--
/**
 * Myskovets Blog dependency injection
 *
 * @category  Myskovets
 * @package   Myskovets\BlogModule
 * @author    Roman Chernii <roche@smile.fr>
 * @copyright 2019 Smile
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Myskovets\BlogModule\Api\Data\PostInterface" type="Myskovets\BlogModule\Model\Post" />
    <preference for="Myskovets\BlogModule\Api\Data\PostSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Myskovets\BlogModule\Api\PostRepositoryInterface" type="Myskovets\BlogModule\Model\PostRepository" />

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="myskovets_blog_post_listing_data_source" xsi:type="string">Myskovets\BlogModule\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Myskovets\BlogModule\Model\ResourceModel\Post\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">myskovets_blog_post</argument>
            <argument name="eventPrefix" xsi:type="string">myskovets_blog_post_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">post_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Myskovets\BlogModule\Model\ResourceModel\Post</argument>
        </arguments>
    </type>

    <virtualType name="MyBlogGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\Model\Entity\RepositoryFactory">
        <arguments>
            <argument name="entities" xsi:type="array">
                <item name="Myskovets\BlogModule\Api\Data\PostInterface" xsi:type="string">Myskovets\BlogModule\Api\PostRepositoryInterface</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Myskovets\BlogModule\Api\Data\PostInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">myskovets_blog_post</item>
                    <item name="identifierField" xsi:type="string">id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Myskovets\BlogModule\Api\Data\PostInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>
</config>
