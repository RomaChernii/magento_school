<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Koshyk\Blog\Block\Post\View" name="post_view" template="Koshyk_Blog::post/view.phtml"/>
            <block class="Magento\Cms\Block\Block" name="block-comment-policy">
                <arguments>
                    <argument name="block_id" xsi:type="string">block-comment-policy</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
