<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Koshyk\ThirdModule\Block\Page\View" name="content_block" template="Koshyk_ThirdModule::firstblock.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="view_model" template="Koshyk_ThirdModule::secondblock.phtml">
                <arguments>
                    <argument name="priceCurrency" xsi:type="object">Koshyk\ThirdModule\ViewModel\PriceCurrency</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
